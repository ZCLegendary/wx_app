


.userinfo_container {

  background-color: black;
  width: 100%;
  min-height: 200px;
  background-image:url(/images/cat.png);
  background-size: 100% 200px;

}

.container { 
  background-color: yellow;

}


.userinfo {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 15px;
  color: #000000;
}

.userinfo-sign {
  margin-top: 15px;
  color: #000000;
}

.usermotto {
  margin-top: 100px;
}


.detail-container{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  min-height: 100px;
}

.block-view {
  
  height: 40px;
  background: white;
  padding-top: 15px;

}

.block-text {
  text-align: center;
  font-size: 20px;
  margin-left: 10px;

}

.block-arrow{
  width: 10px;
  height: 17px;
  float: right;
  margin-right: 10px;
}

.line {
  margin-top: 16px;
  margin-left: 10px;
  margin-right: 10px;
  height: 1px;
  background-color: lightgray
}

.icon{
  margin-left: 10px;
  width: 20px;
  height: 20px;
}